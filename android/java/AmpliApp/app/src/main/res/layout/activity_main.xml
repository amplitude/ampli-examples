<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_identify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Identify"
        app:layout_constraintBottom_toTopOf="@+id/btn_set_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>

    <Button
        android:id="@+id/btn_set_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Group"
        app:layout_constraintBottom_toTopOf="@+id/btn_group_identify"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_identify" />

    <Button
        android:id="@+id/btn_group_identify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group Identify"
        app:layout_constraintBottom_toTopOf="@+id/btn_optional_properties"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_set_group" />

    <Button
        android:id="@+id/btn_optional_properties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event w/ Optional Properties"
        app:layout_constraintBottom_toTopOf="@+id/btn_all_properties"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_group_identify" />

    <Button
        android:id="@+id/btn_all_properties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event w/ All Properties"
        app:layout_constraintTop_toBottomOf="@+id/btn_optional_properties"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>